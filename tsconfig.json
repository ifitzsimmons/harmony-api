{
  "compilerOptions": {
    "alwaysStrict": true,
    "target": "ES2018",
    "module": "commonjs",
    "noEmitHelpers": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "rootDir": "src",
    "removeComments": true,
    "strictNullChecks": true,
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist-cjs",
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist-cjs", "**/__tests__"]
}
